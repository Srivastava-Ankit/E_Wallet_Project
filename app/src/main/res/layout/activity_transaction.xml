<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_transaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transaction_bg"
        tools:context=".modules.Transaction">


        <Button
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            android:background="@drawable/blue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/signOutButton"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="434dp"
            android:layout_alignParentBottom="true" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/accountInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/list" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/blue"
            android:id="@+id/accountInfo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Hi"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/greeting"
                android:layout_weight="0.04"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_width="wrap_content" />

            <TextView
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tranUserName"
                android:layout_weight="0.75"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <TextView
                android:text="$"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/money"
                android:layout_weight="0.04"
                android:gravity="right"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/balance"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

        </LinearLayout>


    </RelativeLayout>
</layout>

