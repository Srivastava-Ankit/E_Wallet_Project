<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/blue"
        tools:context=".signIn.Registration">

        <Button
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@android:color/transparent"
            android:textColor="@drawable/reg_sign_in_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/regSignInButton"
            android:layout_alignBottom="@+id/regBackwardButton" />

        <Button
            android:background="@drawable/backward_button_selector"
            android:id="@+id/regBackwardButton"
            android:layout_height="25dp"
            android:layout_width="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_height="40dp"
            android:background="@drawable/forward_button_selector"
            android:id="@+id/regForwardButton"
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regEditUserName"
            android:background="@drawable/edit_text_underline"
            android:textColor="#FFFFFF"
            android:cursorVisible="false"
            android:layout_height="25dp"
            android:layout_below="@+id/regFirstName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="LAST NAME*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:id="@+id/regLastName"
            android:cursorVisible="false"
            android:layout_below="@+id/regEditUserName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regEditLastName"
            android:background="@drawable/edit_text_underline"
            android:textColor="#FFFFFF"
            android:cursorVisible="false"
            android:layout_height="25dp"
            android:layout_below="@+id/regLastName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Welcome to E-Wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/regWelcome"
            android:layout_below="@+id/regSignInButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="FIRST NAME*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:cursorVisible="false"
            android:id="@+id/regFirstName"
            android:layout_below="@+id/regWelcome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regEditPassword"
            android:background="@drawable/edit_text_underline"
            android:textColor="#FFFFFF"
            android:layout_height="25dp"
            android:layout_below="@+id/regPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regEditConPassword"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_text_underline"
            android:layout_height="25dp"
            android:layout_below="@+id/regConPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="CONFIRM PASSWORD*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:id="@+id/regConPassword"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/regEditPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="PASSWORD*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:id="@+id/regPassword"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/regEditLastName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="PHONE*"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regEditConPassword"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/regPhone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editPhone"
            android:background="@drawable/edit_text_underline"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/regPhone" />

        <TextView
            android:text="(10 digit phone number be your user name)"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regReminder"
            android:layout_alignBaseline="@+id/regPhone"
            android:layout_alignBottom="@+id/regPhone"
            android:layout_toRightOf="@+id/regPhone"
            android:layout_toEndOf="@+id/regPhone"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:text="*a verification code will be sent to you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:id="@+id/codeReminder"
            android:layout_alignTop="@+id/regForwardButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</layout>

