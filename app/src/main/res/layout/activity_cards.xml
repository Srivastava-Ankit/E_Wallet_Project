<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/cards_bg"
        android:id="@+id/activity_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16sp"
        android:paddingTop="16sp"
        tools:context=".model.Cards">

        <Button
            android:background="@drawable/backward_button_selector"
            android:id="@+id/cardsBackwardButton"
            android:layout_height="25dp"
            android:layout_width="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16sp" />

        <Button
            android:background="@drawable/add_card_selector"
            android:id="@+id/addCardButton"
            android:layout_width="25dp"
            android:layout_alignParentEnd="true"
            android:layout_height="25dp"
            android:layout_marginRight="16sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardsBackwardButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:id="@+id/cardList" />

        <Button
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:id="@+id/delete"
            android:background="@drawable/delete_show_selector"
            android:layout_marginEnd="15dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/addCardButton" />

    </RelativeLayout>

</layout>
