<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_card"
        android:background="@drawable/cards_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context=".model.AddCard">

        <Button
            android:background="@drawable/backward_button_selector"
            android:id="@+id/addCardBackwardButton"
            android:layout_height="25dp"
            android:layout_width="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="@drawable/forward_button_reverse_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/addCardForwardButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Enter The Card Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/enterCardNoText"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/addCardBackwardButton"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterCardNoText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:weightSum="1">

            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/cardSpinner"
                android:spinnerMode="dropdown"
                style="@style/spinner_card"
                android:layout_width="wrap_content"
                android:layout_weight="0.84" />

            <EditText
                android:layout_width="185dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editCardNo"
                android:background="@drawable/edit_text_underline"
                android:cursorVisible="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>

    </RelativeLayout>
</layout>

