<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true">
            <gradient android:startColor="#ef9ea1" android:endColor="#FF5A5F" android:angle="270"/>
            <corners android:radius="10dp" />
            <size android:width="80dp" android:height="30dp" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true">
            <gradient android:startColor="#98e4ec" android:endColor="#25A6B5" android:angle="270"/>
            <corners android:radius="10dp" />
            <size android:width="80dp" android:height="30dp" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>